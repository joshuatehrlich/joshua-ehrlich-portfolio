---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const {
	href,
	class: className, ...props 
	} = Astro.props;

const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
const subpath = pathname.match(/[^\/]+/g);
const isActive = href === pathname || href === '/' + (subpath?.[0] || '');
---
<div class="linkbox">
	<div class="clickable">
		<slot />
		<div class="dropdown">
			<a class="link-3" href="/game-jams">Game Jams</a>
			<a class="link-1" href="/dust">Dust</a>
			<a class="link-2" href="/earthen">Earthen</a>
		</div>
	</div>
	
</div>

<style>
	.linkbox {
		/* background-color: rgba(255, 192, 203, 0); */
		width: 100%;
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;

		position: relative;
	}
	.clickable {
		padding: 30px 0px 16px 0px;
		border-radius: 0px 0px 5px 5px;
		display: block;
		white-space: nowrap;
		flex-grow: 1;
		text-decoration: none;
		font-size: 1em;
		margin: 0;
		cursor: pointer;
		text-align: center;
		color: var(--dark);
		background-color: rgba(0,0,0,0);
		opacity: 0.7;
		transition: 250ms;
	}
	.clickable:hover, .clickable.active {
		color: var(--light);
	}

	.dropdown {
		border-radius: 0px 0px 5px 5px;
		position: absolute;
		top: 0;
		padding-top: 80px;
		display: flex;
		opacity: 0;
		pointer-events: none;
		transition: 250ms;
		width: 100%;
		text-align: center;
		overflow: hidden;
		flex-direction: column;
		z-index: -1;
	}

	.clickable:hover > .dropdown {
		opacity: 1;
		pointer-events: all;
		background-color: var(--dark);
		color: var(--light);
	}

	.dropdown > a {
		padding: 10px;
		transition: 250ms;
		color: var(--light);
		margin: 0;
	}

	.dropdown > a:hover {
		opacity: 1;
		color: var(--dark);
		background-color: var(--light);
	}
</style>
